{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API untuk Bunda Bahagia Dapur - sistem manajemen restoran",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node init-tables.js",
    "db:debug": "node debug-login.js",
    "db:check": "node check-after-init.js",
    "db:fix": "node fix-users.js",
    "db:orders": "node debug-orders.js",
    "test:api": "node test-api.js",
    "test:frontend": "node test-frontend-api.js",
    "debug:dashboard": "node debug-dashboard.js",
    "start:full": "npm run db:fix && npm start",
    "db:create": "psql -U postgres -c \"CREATE DATABASE restaurant;\"",
    "db:schema": "psql -U postgres -d restaurant -f schema.sql",
    "db:seed": "node seed.js",
    "db:setup": "npm run db:create && npm run db:schema && npm run db:seed",
    "setup": "node setup-db.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
